{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "params": [
        {
            "name": "Year_selection",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 2004,
                "max": 2021,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "vconcat": [
        {
            "title": "Geographic Distribution of Drug Addiction in Malaysia",
            "width": 1200,
            "height": 600,
            "projection": {
                "type": "mercator"
            },
            "layer": [
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/data/ne_10m.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_10m_graticules_5"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": null,
                        "stroke": "lightgray"
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/data/ne_10m.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_10m_admin_1_states_provinces"
                        }
                    },
                    "transform": [
                        {
                            "calculate": "'Data is not available in ' + datum.properties.name",
                            "as": "note"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "fill": "#ddd",
                        "stroke": "white",
                        "strokeWidth": 1
                    },
                    "encoding": {
                        "tooltip": {
                            "field": "note"
                        }
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/data/state_drug_population_by_year.csv"
                    },
                    "transform": [
                        {
                            "calculate": "datum.state === 'W.P. Kuala Lumpur' ? 'Kuala Lumpur' : datum.state === 'W.P. Labuan' ? 'Labuan' : datum.state === 'W.P. Putrajaya' ? 'Putrajaya' : datum.state",
                            "as": "state_key"
                        },
                        {
                            "lookup": "state_key",
                            "from": {
                                "data": {
                                    "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/js/MalaysiaMapWithGraticules.topojson",
                                    "format": {
                                        "type": "topojson",
                                        "feature": "ne_10m_admin_1_states_provinces"
                                    }
                                },
                                "key": "properties.name"
                            },
                            "as": "geo"
                        },
                        {
                            "filter": "datum.year == Year_selection"
                        },
                        {
                            "calculate": "datum.drug_addicts / datum.population * 100",
                            "as": "rate_per_100k"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "stroke": "#fff",
                        "strokeWidth": 0.5
                    },
                    "encoding": {
                        "shape": {
                            "field": "geo",
                            "type": "geojson"
                        },
                        "color": {
                            "field": "rate_per_100k",
                            "type": "quantitative",
                            "scale": {
                                "domain": [
                                    20,
                                    200
                                ],
                                "nice": true,
                                "scheme": "reds"
                            },
                            "legend": {
                                "title": "Drug Addicts per 100,000",
                                "format": ".2s"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "year",
                                "title": "Year",
                                "type": "quantitative"
                            },
                            {
                                "field": "state",
                                "title": "State",
                                "type": "nominal"
                            },
                            {
                                "field": "drug_addicts",
                                "title": "Drug addicts",
                                "type": "quantitative"
                            },
                            {
                                "field": "rate_per_100k",
                                "title": "Per 100,000",
                                "type": "quantitative",
                                "format": ".2f"
                            }
                        ]
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/data/state_drug_population_by_year.csv"
                    },
                    "transform": [
                        {
                            "lookup": "state",
                            "from": {
                                "data": {
                                    "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/data/malaysia_state_centroids.csv"
                                },
                                "key": "state",
                                "fields": [
                                    "lat",
                                    "lon"
                                ]
                            }
                        },
                        {
                            "filter": "datum.state == 'Terengganu' || datum.state == 'Perlis' || datum.state == 'Kelantan' || datum.state == 'Pulau Pinang' || datum.state == 'W.P. Kuala Lumpur' || datum.state == 'Kedah' ||  datum.state == 'Sabah'"
                        },
                        {
                            "filter": "datum.year == Year_selection"
                        },
                        {
                            "calculate": "datum.drug_addicts / datum.population * 100",
                            "as": "rate_per_100k"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "fontStyle": "italic"
                    },
                    "encoding": {
                        "text": {
                            "field": "state",
                            "type": "nominal"
                        },
                        "longitude": {
                            "field": "lon",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "lat",
                            "type": "quantitative"
                        },
                        "tooltip": [
                            {
                                "field": "year",
                                "title": "Year",
                                "type": "quantitative"
                            },
                            {
                                "field": "state",
                                "title": "State",
                                "type": "nominal"
                            },
                            {
                                "field": "drug_addicts",
                                "title": "Drug addicts",
                                "type": "quantitative"
                            },
                            {
                                "field": "rate_per_100k",
                                "title": "Per 100,000",
                                "type": "quantitative",
                                "format": ".2f"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "title": "Drug Type Distribution Among Reported Addiction Cases in Malaysia",
            "width": 1200,
            "height": 300,
            "data": {
                "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/data/drug_type_by_year.csv"
            },
            "mark": {
                "type": "bar",
                "fill": "#ddd",
                "stroke": "black",
                "strokeWidth": 1
            },
            "transform": [
                {
                    "filter": "datum.year == Year_selection"
                },
                {
                    "calculate": "toNumber(datum.value)",
                    "as": "val"
                },
                {
                    "window": [
                        {
                            "op": "rank",
                            "as": "ranking"
                        }
                    ],
                    "sort": [
                        {
                            "field": "val",
                            "order": "descending"
                        }
                    ]
                },
                {
                    "filter": "datum.ranking <= 5"
                }
            ],
            "encoding": {
                "x": {
                    "field": "value",
                    "type": "quantitative",
                    "title": "Drug Addicts"
                },
                "y": {
                    "field": "drug_type",
                    "type": "ordinal",
                    "title": null,
                    "sort": {
                        "field": "value",
                        "order": "descending"
                    }
                },
                "tooltip": [
                    {
                        "field": "year",
                        "title": "Year",
                        "type": "quantitative"
                    },
                    {
                        "field": "drug_type",
                        "title": "Type of Drug",
                        "type": "nominal"
                    },
                    {
                        "field": "value",
                        "title": "Drug Addicts",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        }
    ],
    "config": {
        "title": {
            "font": "sans-serif",
            "fontSize": 14
        }
    }
}