{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Drug Addiction in Malaysia by State (per 100,000 population)",
  "width": 1500,
  "height": 600,
  "autosize": {"type": "fit", "resize": true},
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/data/ne_10m_ocean.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/js/MalaysiaMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/data/state_drug_population_by_year.csv",
        "format": {"type": "csv", "parse": {"year": "number", "drug_addicts": "number", "population": "number"}}
      },
      "transform": [
        {"filter": {"param": "time_brush"}},
        {
          "calculate": "datum.state === 'W.P. Kuala Lumpur' ? 'Kuala Lumpur' : datum.state === 'W.P. Labuan' ? 'Labuan' : datum.state === 'W.P. Putrajaya' ? 'Putrajaya' : datum.state",
          "as": "state_match"
        },
        {
          "lookup": "state_match",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/js/MalaysiaMapWithGraticules.topojson",
              "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
            },
            "key": "properties.name",
            "fields": ["type", "properties", "geometry"]
          },
          "as": "geo"
        },
        {"filter": "datum.geo && datum.geo.properties && datum.geo.properties.adm0_a3 == 'MYS'"},
        {
          "calculate": "isValid(datum.population) && isValid(datum.drug_addicts) ? (datum.drug_addicts / datum.population) * 100000 : null",
          "as": "rate_per_100k"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "rate_per_100k",
          "type": "quantitative",
          "title": "Drug addicts per 100,000",
          "scale": {
            "type": "threshold",
            "domain": [18, 50, 82, 114, 146],
            "range": ["#fef0d9", "#fdd49e", "#fdbb84", "#fc8d59", "#e34a33", "#b30000"]
          },
          "legend": {"orient": "bottom", "direction": "horizontal"}
        },
        "tooltip": [
          {"field": "state", "title": "State", "type": "nominal"},
          {"field": "year", "title": "Year", "type": "quantitative"},
          {"field": "rate_per_100k", "title": "Per 100,000", "type": "quantitative", "format": ".2f"},
          {"field": "drug_addicts", "title": "Drug addicts", "type": "quantitative"},
          {"field": "population", "title": "Population", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/js/MalaysiaMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "transform": [
        {"filter": "datum.properties.adm0_a3 == 'MYS'"},
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/main/data/malaysia_state_centroids.csv",
              "format": {"type": "csv", "parse": {"lat": "number", "lon": "number"}}
            },
            "key": "state",
            "fields": ["lat", "lon"]
          }
        },
        {"filter": "isValid(datum.lon) && isValid(datum.lat)"},
        {
          "calculate": "datum.properties.name === 'Kuala Lumpur' ? 'W.P. Kuala Lumpur' : datum.properties.name === 'Labuan' ? 'W.P. Labuan' : datum.properties.name === 'Putrajaya' ? 'W.P. Putrajaya' : datum.properties.name",
          "as": "label_state"
        }
      ],
      "mark": {"type": "text", "fontSize": 11, "baseline": "middle", "align": "center", "color": "black"},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "label_state", "type": "nominal"}
      }
    }
  ]
}
