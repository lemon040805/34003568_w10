{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "width": 1100,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/34003568_w10/refs/heads/main/data/drug_by_sex.csv"
    },
    "mark": {
        "type": "area",
        "line": {
            "color": "#f07860"
        },
        "color": {
            "gradient": "linear",
            "x1": 1,
            "y1": 1,
            "x2": 1,
            "y2": 0,
            "stops": [
                {
                    "offset": 0,
                    "color": "white"
                },
                {
                    "offset": 1,
                    "color": "#f07860"
                }
            ]
        }
    },
    "encoding": {
        "x": {
            "field": "year",
            "type": "quantitative",
            "scale": { "nice": false },
            "axis": {
                "title": null,
                "format": "d"
            }
        },
        "y": {
            "aggregate": "sum",
            "field": "value",
            "axis": {
                "title": "Drug Addicts",
                "titlePadding": 20
            }
        },
        "tooltip": [
            {
                "field": "year",
                "title": "Year",
                "type": "ordinal"
            },
            {
                "aggregate": "sum",
                "field": "value",
                "title": "Drug Addicts",
                "format": "d"
            }
        ]
    }
}